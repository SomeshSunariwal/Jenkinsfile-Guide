InputValue='false'

pipeline{
    
    agent any

    stages{
        stage("First Step"){
            steps{
                script {
                    InputValue = input(
                        id: 'userInput',
                        message: 'Want Second Step?',
                        parameters: [
                            choice(name: 'CHOICE', choices: ['true', 'false'], description: 'Enter your Choice'),
                        ]
                    )
                }
            }
        }
        stage("Second Step"){
            when {
                expression {
                    InputValue == 'true'
                }
            }
            steps{
                echo "InputValue is ${InputValue} That is why it Ran"   
            }
        }
    }
}